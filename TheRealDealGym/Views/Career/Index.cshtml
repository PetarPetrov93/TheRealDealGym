@model IEnumerable<JobAdvertListModel>
@{
    ViewData["Title"] = "Careers";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

@if (Model.Any() == false)
{
    <h3 class="text-center">There are currently no open positions!</h3>
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-body text-center">
                    <h4>@item.Title</h4>
                    <br />
                    <form asp-controller="Career" asp-action="Details" method="get">
                        <input type="hidden" name="jobAdvertId" value="@item.Id">
                        <button type="submit" class="btn btn-primary">Details</button>
                    </form>
                    
                </div>
            </div>
        </div>
    }
</div>