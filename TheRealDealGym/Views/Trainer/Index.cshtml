@model IEnumerable<TrainerClassModel>
@{
    ViewData["Title"] = "My Classes";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

@if (Model.Any() == false)
{
    <h3 class="text-center">You don't have any active classes at the moment!</h3>
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-body text-center">
                    <h4>@item.Title</h4>
                    <h6>Date: <b>@item.Date</b></h6>
                    <h6>Time: <b>@item.Time</b></h6>
                    <br />
                    <form asp-controller="Class" asp-action="Details" method="get">
                        <input type="hidden" name="classId" value="@item.Id">
                        <button type="submit" class="btn btn-primary">Details</button>
                    </form>
                    <a asp-controller="Class" asp-action="Edit" asp-route-id="@item.Id"
                       class="btn btn-warning">Edit Class</a>
                    <a asp-controller="Clas" asp-action="Delete" asp-route-id="@item.Id"
                       class="btn btn-danger">Delete Class</a>
                </div>
            </div>
        </div>
    }
</div>