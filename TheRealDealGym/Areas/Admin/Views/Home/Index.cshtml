﻿@{
    ViewData["Title"] = "Dashboard";
}

<div class="mt-4 p-5 bg-light text-center">
    <h2 class="display-4">Hello, Admin!</h2>
    <p class="lead mb-1 mt-3">
        This is your administrator area - you can <b>read</b>, <b>create</b>,
        <b>delete</b> and <b>edit</b> classes.
        <br />You can <b>rent</b> and <b>leave</b> the free ones, too!
    </p>
    <p class="lead mt-1">
        You can also see <b>all users and agents</b> and <b>all rents</b> in the system.
    </p>
    <hr class="my-4">
    <a asp-area="" asp-controller="Class" asp-action="Index"
       class="btn btn-primary btn-lg">Classes</a>
    <span>  |   </span>
    <a asp-area="" asp-controller="Class" asp-action="All"
       class="btn btn-primary btn-lg">Jobs</a>
    <span>  |   </span>
    <a asp-area="Admin" asp-controller="Trainer" asp-action="Index"
       class="btn btn-primary btn-lg">Sports</a>
    <span>  |   </span>
    <a asp-area="Admin" asp-controller="Rent" asp-action="All"
       class="btn btn-primary btn-lg">Rooms</a>
    <span>  |   </span>
    <a asp-area="Admin" asp-controller="Staff" asp-action="Index"
       class="btn btn-primary btn-lg">Staff</a>
</div>